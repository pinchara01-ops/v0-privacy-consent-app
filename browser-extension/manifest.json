{
    "manifest_version": 3,
    "name": "Privacy Consent Manager",
    "version": "1.0.0",
    "description": "Manage your privacy consents across all websites with GDPR/CCPA compliance and bot detection",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "botd.min.js",
                "bot-detector.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*.reddit.com/*",
                "http://localhost:5000/*",
                "http://localhost:3000/*"
            ],
            "js": [
                "reddit-content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}